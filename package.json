{
    "name": "sv-frontend-web",
    "version": "0.1.0",
    "description": "Service front-end ecommerce package",
    "author": "Thành Nguyễn <dev.thanhnguyen@gmail.com>",
    "private": true,
    "license": "MIT",
    "engines": {
        "node": ">=10",
        "yarn": "*"
    },
    "scripts": {
        "clean": "./node_modules/.bin/rimraf dist .next dist",
        "build:next": "yarn clean && next build",
        "build:server": "tsc --project tsconfig.server.json",
        "build": "yarn build:next && yarn build:server",
        "dev": "yarn clean && ts-node --project tsconfig.server.json src/index.ts",
        "start:dev": "NODE_ENV=development node .next/src/index.js",
        "start:prod": "NODE_ENV=production node .next/src/index.js",
        "lint:fix": "tslint -p . -c tslint.json",
        "type-check": "tsc"
    },
    "dependencies": {
        "@zeit/next-sass": "^1.0.1",
        "axios": "^0.21.0",
        "bcryptjs": "^2.4.3",
        "cross-env": "^7.0.3",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "formik": "^2.2.5",
        "jquery": "^3.5.1",
        "loadsh": "^0.0.4",
        "moment": "^2.29.1",
        "moment-timezone": "^0.5.34",
        "next": "10",
        "next-redux-wrapper": "^6.0.2",
        "node-html-markdown": "^1.3.0",
        "node-sass": "^5.0.0",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-facebook-pixel": "^1.0.4",
        "react-redux": "^7.2.2",
        "react-slick": "^0.27.13",
        "react-toc": "^3.1.0",
        "redux": "^4.0.5",
        "redux-devtools-extension": "^2.13.8",
        "redux-thunk": "^2.3.0",
        "universal-cookie": "^4.0.4",
        "uuid": "^8.3.2",
        "yup": "^0.32.8"
    },
    "devDependencies": {
        "@types/express": "^4.17.9",
        "@types/jquery": "^3.5.5",
        "@types/lodash": "^4.14.165",
        "@types/moment": "^2.13.0",
        "@types/node": "^12.12.21",
        "@types/react": "^16.9.16",
        "@types/react-dom": "^16.9.4",
        "@types/react-redux": "^7.1.11",
        "@types/react-slick": "^0.23.4",
        "@types/universal-cookie": "^2.2.0",
        "@types/uuid": "^8.3.3",
        "babel-plugin-module-resolver": "^4.0.0",
        "husky": "^4.3.5",
        "lint-staged": "^10.5.3",
        "ts-node": "^9.1.1",
        "tslint": "^6.1.3",
        "tslint-config-airbnb": "^5.11.2",
        "tslint-react-hooks": "^2.2.2",
        "typescript": "4.1.6"
    },
    "lint-staged": {
        "*.+(ts|tsx)": [
            "prettier --write",
            "git add",
            "jest --findRelatedTests",
            "tslint"
        ]
    }
}
